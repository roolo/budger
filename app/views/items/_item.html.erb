<tr>
  <td>
    <span class="label label-<%= print_by_type(item.item_type, ['important', 'success']) %>">
      <%= print_by_type(item.item_type, ['Expense', 'Income']) %>
    </span>
    <%= item.name %>
  </td>
  <td><%= item.money_amount %></td>
  <td><%= item.priority %></td>
  <td>
    <div class="btn-group">
      <%= link_to raw('<i class="icon-remove"></i>&nbsp;')+"Destroy", budget_item_path(item.budget, item), class: 'btn btn-danger', :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      <a class="btn btn-danger dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><%= link_to raw('<i class="icon-eye-open"></i>&nbsp;')+"Show", budget_item_path(item.budget, item) %></li>
        <li><%= link_to raw('<i class="icon-pencil"></i>&nbsp;')+"Edit", edit_budget_item_path(item.budget, item) %></li>
      </ul>
    </div> <!--.btn-group-->
  </td>
</tr>
