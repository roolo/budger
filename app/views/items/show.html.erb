
<label class="label"><%= t("activerecord.attributes.item.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</label>
<p><%= @item.name %></p>

<label class="label"><%= t("activerecord.attributes.item.money_amount", :default => t("activerecord.labels.money_amount", :default => "Money amount")) %>:</label>
<p><%= @item.money_amount %></p>

<label class="label"><%= t("activerecord.attributes.item.priority", :default => t("activerecord.labels.priority", :default => "Priority")) %>:</label>
<p><%= @item.priority %></p>

<label class="label"><%= t("activerecord.attributes.item.item_type", :default => t("activerecord.labels.item_type", :default => "Item type")) %>:</label>
<p><%= print_type @item.item_type %></p>

<div class="form-actions">
<%= link_to "Back", budget_items_path(@item.budget), :class => 'btn'  %>
<%= link_to "Edit", edit_budget_item_path(@item.budget, @item), :class => 'btn' %>
<%= link_to "Delete", budget_item_path(@item.budget, @item), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
</div>
