<h1>Budget <%= @budget.name %></h1>

<div class="form-actions">
<%= link_to "Back", budgets_path, :class => 'btn'  %>
<%= link_to "Edit", edit_budget_path(@budget), :class => 'btn' %>
<%= link_to "Delete", budget_path(@budget), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
</div>

<h2>Expenses</h2>
<%= form_for Item.new do |f| -%>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>NAME</th>
      <th>MONEY AMOUNT</th>
      <th>PRIORITY</th>
    </tr>
    </thead>
    <tbody>
    <%= render @budget.expenses %>

    <tr>
      <td><%= f.text_field :name %></td>
      <td><%= f.text_field :money_amount %></td>
      <td><%= f.text_field :priority, class: 'number_field' %></td>
    </tr>

    </tbody>
  </table>
<% end -%>

